{
  "expo": {
    "name": "Lumen",
    "slug": "lumen",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logos/icon.png",
    "scheme": "lumen",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logos/adaptive-icon.png",
        "backgroundColor": "#0F0F0F"
      },
      "edgeToEdgeEnabled": true
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/logos/favicon.png"
    },

    "splash": {
      "image": "./assets/logos/lumen-logo-dark.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F0F0F"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/logos/lumen-logo-dark.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0F0F0F"
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}
